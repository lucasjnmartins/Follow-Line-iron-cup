#include <main.h>
#include <Bluetooth.h>
#include <usart.h>
#include <dma.h>


uint8_t rx_endereco [Pacote_variaveis] = {0};

void serial_init(void) {
    MX_DMA_Init();
    MX_USART1_UART_Init();
    HAL_UART_Receive_DMA(&huart1, rx_endereco, Pacote_variaveis);
}

